<h1>Sample Application for EnergyDataSimulationChallenge Challenge3!</h1>

<p>Click 'show' to see charts</p>

<input type="text" ng-model="keyword" placeholder="Keyword" />

<div ng-controller="houseCtrl">
  <table>
    <tr ng-repeat="house in houses | filter:keyword">
      <td>{{house.name}}</td>
    </tr>
  </table>
</div>

<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>City</th>
      <th>Num of people</th>
      <th>Has child</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @houses.each do |house| %>
      <tr>
        <td><%= house.firstname %></td>
        <td><%= house.lastname %></td>
        <td><%= house.city %></td>
        <td><%= house.num_of_people %></td>
        <td><%= house.has_child %></td>
        <td><%= link_to 'Show', house %></td>
        <td><%= link_to 'Edit', edit_house_path(house) %></td>
        <td><%= link_to 'Destroy', house, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



